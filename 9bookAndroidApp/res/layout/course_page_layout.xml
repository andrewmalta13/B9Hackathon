<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.book.MainActivity" >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:id="@+id/courseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="courseName" 
        android:textAppearance="?android:attr/textAppearanceLarge"/>

  

    <TextView
        android:id="@+id/time"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/courseName"
        android:layout_alignParentStart="true"
        android:text="time" />

    <TextView
        android:id="@+id/place"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseName"
        android:layout_toRightOf="@+id/time"
        android:text="place" />

    <TextView
        android:id="@+id/distReqs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/place"
        android:layout_below="@+id/place"
        android:text="distReqs" />

    <TextView
        android:id="@+id/courseNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/time"
        android:text="courseNumber" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/courseNumber"
        android:layout_marginTop="58dp"
        android:text="description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/Rating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/courseNumber"
        android:src="@android:drawable/alert_dark_frame" />

    <ImageView
        android:id="@+id/Rating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseNumber"
        android:layout_toRightOf="@+id/courseNumber"
        android:src="@android:drawable/alert_dark_frame" />

    <ImageView
        android:id="@+id/Rating3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/distReqs"
        android:layout_alignTop="@+id/Rating2"
        android:src="@android:drawable/alert_dark_frame" />

</RelativeLayout>
</android.support.v4.widget.DrawerLayout>